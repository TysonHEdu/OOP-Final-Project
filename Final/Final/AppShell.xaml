<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Final.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Final"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        
    <ShellContent
        Title="Log In"
        ContentTemplate="{DataTemplate local:LogIn}"
        Route="LogIn" />
        
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Facilities"
        ContentTemplate="{DataTemplate local:Facilities}"
        Route="Facilities" />

        <ShellContent
        Title="Contact Us"
        ContentTemplate="{DataTemplate local:ContactUs}"
        Route="ContactUs" />


    </TabBar>
</Shell>
