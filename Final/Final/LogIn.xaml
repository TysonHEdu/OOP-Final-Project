<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="Final.LogIn"
             Title="LogIn">


    <ScrollView>
        <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="600" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450" />
                </Grid.ColumnDefinitions>

                <Entry x:Name="UserName" Grid.Row="0" Grid.Column="0" HeightRequest="200"/>
                <Entry x:Name="Password" Grid.Row="1" Grid.Column="0" HeightRequest="200"/>
                <Button x:Name="Enter" Grid.Row="2" Grid.Column="0" Text="Log In" HeightRequest="200"/>

            </Grid>
    </ScrollView>
    
</ContentPage>
